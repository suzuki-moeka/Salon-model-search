<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h4 class="title-border pb-4">
        メンバー登録
      </h4>
    </div>
  </div>
</div>
 <div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto">
     <div class="d-flex align-items-center">
       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= render "customer/shared/error_messages", resource: resource %>
          <div>
            <%= f.label :"名前" %><br />
            <%= f.label :"(姓)" %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "name" %><br />
            <%= f.label :"(名)" %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
          </div>

          <div>
            <%= f.label :"フリガナ" %><br />
            <%= f.label :"(セイ)" %><br />
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %><br />
            <%= f.label :"(メイ)" %><br />
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :"郵便番号（ハイフンなし）" %><br />
            <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %><br />
            <%= f.label :"住所" %><br />
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </div>

          <div class="field">
            <%= f.label :"電話番号" %><br />
            <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions mt-4">
            <%= f.submit "新規会員登録", class: "btn rounded-pill" %>
            <hr>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto">
     <div class="d-flex align-items-center mt-4">
       <div>
          メンバー登録済みの方は<br>
          <%= render "customer/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>