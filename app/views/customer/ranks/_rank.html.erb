<% post_ranks.each.with_index(1) do |post, i| %>
  <div class="jumbotron bottom">
    第<%= i %>位
      <!--いいね数-->
      <i class="fas fa-heart"></i>
        <%= post.likes.count %>
      </i>
      <!--title-->
      <%= link_to customer_post_path(post.id) do %>
        <h5><%= post.title %></h5><br>
      <% end %>
      <!--画像-->
      <% if post.image.attached? %>
        <%= image_tag post.image, size:'190x190' %><br>
      <% end %>
    </div>
<% end %>