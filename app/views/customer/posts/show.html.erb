<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card shadow">
        <!--title-->
        <%= @post.title %><br>
        <!--画像-->
        <% if @post.image.attached? %>
          <%= image_tag @post.image, size:'200x200' %><br>
        <% else %>
          <%= image_tag 'no_image.jpg', size:'200x200' %><br>
        <% end %>
        <!--名前-->
        <%= @post.customer.last_name + @post.customer.first_name %><br>
        <!--内容-->
        <%= @post.post %><br>
        <!--金額-->
        <%= @post.price %><br>
        <!--希望日時-->
        <%= @post.timedate %><br>
        <div>
          <p>コメント件数：<%= @post.post_comments.count %></p>
          <% @post.post_comments.each do |post_comment| %>
        　　  <!--名前-->
            <%= post_comment.customer.full_name %>
            <!--時間-->
            <%= post_comment.created_at.strftime('%Y/%m/%d') %>
            <!--コメント-->
            <%= post_comment.comment %>
            <!--カスタマーコメント削除-->
            <% if post_comment.customer == current_customer %>
              <%= link_to "削除", customer_post_post_comment_path(post_comment.post, post_comment), method: :delete %>
            <% end %>
            <!--管理者コメント削除-->
            <% if admin_signed_in? %>
              <%= link_to "削除", customer_post_post_comment_path(post_comment.post, post_comment), method: :delete %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
        <%= form_with model: [@post, @post_comment], url: customer_post_post_comments_path(@post) do |f| %>
          <%= f.text_area :comment, placeholder: "コメントをここに" %>
          <div>
            <%= f.submit "コメントする" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
