<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
        <% @posts.each do |post| %>
          <div class="jumbotron bottom">
            <div>
              <!--title-->
              <h6 class="font-weight-bold"><%= post.title %></h6><br>
              <!--画像-->
              <strong>
                <% if post.images.attached? %>
                  <% post.images.each do |image| %>
                    <%= image_tag image.variant(resize: '150x150') %><br>
                  <% end %>
                <% else %>
                  <%= image_tag 'no_image.jpg', class: 'img-fluid' %><br>
                <% end %>
              </strong>
              <!--内容-->
              <%= truncate(post.post, omission: "...") %><br>
              <!--金額-->
              金額 <font color="red">￥<%= post.price %></font><br>
              <!--希望日時-->
              日時：<%= post.timedate %><br>
              <!--タグ-->
              <i class="fas fa-hashtag"></i><%= post.category %>
              <!--いいね数-->
              &emsp;<i class="fas fa-heart heart"></i>
              <%= post.likes.count %>
              <!--コメント件数-->
              &emsp;<i class="fas fa-comment-alt comment"></i>
              <%= post.post_comments.count %>
              <!--詳細へ-->
              <div class="btn float-right">
                <%= link_to"詳細を見る", customer_post_path(post.id), class: "link" %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= paginate @posts, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>