<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1>投稿フォーム</h1>
  <%= form_with model: @post, url: customer_posts_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :image, "画像" %>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <%= f.label :price, "金額" %>
      <div class="input-group">
        <%= f.text_field :price, class: 'form-control' %>
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupPrepend3">円</span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :post, "内容" %>
      <%= f.text_area :post, class: 'form-control' %>
      <%= render 'customer/tags/form', post: @post %>
    </div>
    <div class="form-group">
      <%= f.label :timedate, "希望日時" %>
      <%= f.text_field :timedate, class: 'form-control' %>
    </div>
    <%= f.submit '投稿' %>
  <% end %>
    </div>
  </div>
</div>