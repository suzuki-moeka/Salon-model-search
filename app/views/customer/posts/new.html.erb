<h1>投稿フォーム</h1>
  <%= form_with model: @post, url: customer_posts_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label "タイトル" %>
      <%= f.text_area :title %>
    </div>
    <div class="form-group">
      <%= f.label "画像" %>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <%= f.label "金額" %>
      <%= f.text_field :price %>円
    </div>
    <div class="form-group">
      <%= f.label "内容" %>
      <%= f.text_area :post %>
    </div>
    <div class="form-group">
      <%= f.label "希望日時" %>
      <%= f.text_area :timedate %>
    </div>
    <%= f.submit '投稿' %>
  <% end %>