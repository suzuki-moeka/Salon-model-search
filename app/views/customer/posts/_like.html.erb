<% if customer_signed_in? %>
  <% if post.liked_by?(current_customer) %>
    <%= link_to customer_post_likes_path(post), method: :delete, remote: true do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to customer_post_likes_path(post), method: :post, remote: true do %>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %>
<% end %>