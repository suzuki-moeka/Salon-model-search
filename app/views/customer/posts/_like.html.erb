<% if customer_signed_in? %>
  <% if post.liked_by?(current_customer) %>
    <font size="6">
      <%= link_to customer_post_likes_path(post), method: :delete,class: "like", remote: true do %>
        <i class="fas fa-heart"></i>
    </font>
    <% end %>
  <% else %>
    <font size="6">
      <%= link_to customer_post_likes_path(post), method: :post,class: "notlike", remote: true do %>
        <i class="far fa-heart"></i>
      <% end %>
    </font>
  <% end %>
<% end %>