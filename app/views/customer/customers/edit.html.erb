<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h4>
        登録情報変更
      </h4>
        <div class="card shadow  align-items-center">
          <%= form_with model: @customer, url: customer_customer_path, method: :patch do |f| %>
            <div>
              <%= f.label :first_name, "氏名" %>
              <%= f.text_field :last_name, autofocus: true %>
              <%= f.text_field :first_name, autofocus: true %>
            </div>
            <div>
              <%= f.label :first_name_kana, "フリガナ" %>
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
            </div>
            <div>
              <%= f.label :postcode, "郵便番号（ハイフンなし）" %>
              <%= f.text_field :postcode, autocomplete: "postal-code" %>
            </div>
              <div>
              <%= f.label :address, "住所" %>
              <%= f.text_field :address %>
            </div>
            <div>
              <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
              <%= f.text_field :phone_number %>
            </div>
            <div>
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, autocomplete: "email" %>
            </div>
            <%= f.submit "編集内容を保存" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>