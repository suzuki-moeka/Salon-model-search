<header class="shadow-sm">
  <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:#CD7996;">
    <div class="container">
      <a class="navbar-brand " href="/">
        <%= image_tag'logo.png', size:"250x100" %>
      </a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
       </button>
    </div>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <!--customerログイン後のヘッダー-->
        <% if customer_signed_in? %>
          <li>
            <%#= link_to "マイページ", public_customer_path(current_customer) %>
          </li>
          <li>
            <%= link_to "サロン一覧",customer_posts_path %>
          </li>
          <li>
            <%= link_to '投稿フォーム', new_customer_post_path %>
          </li>
          <li>
            <%= link_to "ログアウト",destroy_customer_session_path, method: :delete %>
          </li>
        <!--adminログイン後のヘッダー-->
        <% elsif admin_signed_in? %>
          <li>
            <%#= link_to "会員一覧", admin_customers_path %>
          </li>
          <li>
            <%#= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
          </li>
        <!--両者ログイン前-->
        <% else %>
          <li>
            <%#= link_to "About", public_homes_about_path %>
          </li>
          <li>
            <!--新規メンバー登録-->
          </li>
          <li>
            <%= link_to "ログイン", new_customer_session_path %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>