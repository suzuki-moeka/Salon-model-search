<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h4>
        メンバー一覧
      </h4>
    </div>
  </div>
</div>
 <div class="container">
  <div class="row">
    <div class="col-lg-7">
     <div class="d-flex align-items-center">
       <table class="table">
        <thead>
          <tr>
            <th scope="col">＃</th>
            <th scope="col">ID</th>
            <th scope="col">名前</th>
            <th scope="col">アドレス</th>
          </tr>
        </thead>
          <tbody>
            <tr>
              <% @customers.each do |customer| %>
                <th scope="row">1</th>
                <td>
                  <%= customer.id %>
                </td>
                <td>
                  <%= link_to  admin_customer_path(customer.id) do %>
                   <%= customer.full_name %>
                  <% end %>
                </td>
                <td>
                  <%= customer.email %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
     </div>
    </div>
  </div>
</div>